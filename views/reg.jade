extends layout

block content
  form.form-horizontal(role="form", method="POST")
    .form-group
      label.col-sm-2.control-label(for="firstname") 用户名
      .col-sm-10
        input.form-control(type="text", name="username", placeholder="用户名")
    .form-group
      label.col-sm-2.control-label(for="lastname") 密码
      .col-sm-10
        input.form-control(type="password", name="password", placeholder="密码")
    .form-group
      label.col-sm-2.control-label(for="lastname") 密码
      .col-sm-10
        input.form-control(type="password", name="password-repeat", placeholder="重复密码")
    .form-group
      label.col-sm-2.control-label(for="lastname") 邮箱
      .col-sm-10
        input.form-control(type="text", name="email", placeholder="邮箱")        
    .form-group
      .col-sm-offset-2.col-sm-10
        input.btn.btn-defaylt(type="submit", value="完成注册")   
